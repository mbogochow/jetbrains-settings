<application>
  <component name="DefaultFont">
    <option name="FONT_SIZE" value="21" />
    <option name="FONT_SCALE" value="1.75" />
  </component>
  <component name="EditorSettings">
    <option name="IS_WHEEL_FONTCHANGE_ENABLED" value="true" />
  </component>
  <component name="TodoConfiguration">
    <pattern pattern="\btodo\b.*" />
    <pattern pattern="\bfixme\b.*" />
    <pattern pattern=".*\btodo\b.*\bread\b.*" />
    <pattern pattern=".*\btodo\b.*\bwrite\b.*" />
    <filter name="reads">
      <pattern index="2" />
    </filter>
    <filter name="writes">
      <pattern index="3" />
    </filter>
  </component>
</application>